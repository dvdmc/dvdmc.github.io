---
import Layout from "@/layouts/Layout.astro";

const images = [
  { src: '/photos/photo1.jpg', alt: 'Sunset over mountains', caption: 'Sunset over mountains' },
  { src: '/photos/photo2.jpg', alt: 'City skyline at night', caption: 'City skyline at night' },
  // add more images here
];
---

<Layout>
  <section class="min-h-screen bg-gray-50 py-10 px-4 sm:px-8">
    <h1 class="text-3xl font-bold mb-8 text-center text-gray-900">Some of my photos</h1>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6 max-w-7xl mx-auto">
      {images.map(({ src, alt, caption }) => (
        <div class="relative group cursor-pointer overflow-hidden rounded-lg shadow-lg bg-white">
          <img
            src={src}
            alt={alt}
            loading="lazy"
            class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-110"
          />
          <div
            class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-sm px-3 py-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          >
            {caption}
          </div>
        </div>
      ))}
    </div>
  </section>
</Layout>